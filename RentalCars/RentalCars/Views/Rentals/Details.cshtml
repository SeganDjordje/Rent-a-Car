@model RentalCars.Models.Rental

@{
    ViewBag.Title = "Details";
}

<!-- Plugged in my own .css file -->
@Styles.Render("~/Content/Styles.css")

<h2>Details</h2> <!-- Main Title -->

<div>
    <h4>Rental</h4> <!-- Title -->
    <hr />

    <!-- Descritpion list -->
    <dl class="dl-horizontal text-primary"> <!-- Added text css / dl is Description List -->
        <dt> <!-- Represents a Description Term or name -->
            @Html.DisplayNameFor(model => model.DateRented)
        </dt>

        <dd> <!-- Represents a description -->
            @Convert.ToDateTime(Model.DateRented).ToString("dd/MM/yyyy") <!-- Needed to convert DateTime toString -->
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.DateReturned)
        </dt>

        <dd>
            @Convert.ToDateTime(Model.DateReturned).ToString("dd/MM/yyyy") <!-- Needed to convert DateTime toString -->
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Car.Manufacturer)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Car.Manufacturer)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Customer.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Customer.Name)
        </dd>

    </dl>
    <!-- Descritpion list/ -->

</div>

<!-- Buttons -->
<button type="button" class="btn btn-outline-info">@Html.ActionLink("Edit", "Edit", new { id = Model.RentalID })</button>
<button type="button" class="btn btn-outline-primary">@Html.ActionLink("Back to List", "Index")</button>
<!-- Buttons/ -->
